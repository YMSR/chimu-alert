# --- Required ---
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DBNAME

# NextAuth credentials auth
NEXTAUTH_SECRET=replace-with-random-string
NEXTAUTH_URL=http://localhost:3000
EMAIL_FROM=alerts@example.com

# Choose one email provider and set its key
RESEND_API_KEY=
SENDGRID_API_KEY=

# Admins who can access /admin/ingest (comma-separated emails)
ADMIN_EMAILS=you@example.com

# Update NEXTAUTH_URL above to match your production domain (e.g., https://okuyami-alert.vercel.app)

# Optional: a shared secret for cron job trigger (if you protect an API route)
CRON_SECRET=replace-with-long-random
